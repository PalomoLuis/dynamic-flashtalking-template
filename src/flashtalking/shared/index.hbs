<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="ad.size" content="width={{settings.size.width}},height={{settings.size.height}}">

    <title>{{settings.size.width}}x{{settings.size.height}}</title>

    <link rel="stylesheet" href="{{content.css}}" type="text/css">
</head>

<body>
  <div class="banner border">
    <div class="content fullscreen">
      <img class="bg" id="backgroundImage">
      <div class="title" id="title"></div>
      <div class="cta">
        <div class="cta_copy" id="cta"></div>
      </div>
    </div>
    <div class="mainExit fullscreen"></div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.8.0/gsap.min.js"></script>
  <script src="https://cdn.flashtalking.com/frameworks/js/api/2/10/html5API.js"></script>
  <script>

    var container = myFT.$(".banner");
    var backgroundImage = myFT.$("#backgroundImage")[0];
    var title = myFT.$("#title")[0];
    var cta = myFT.$("#cta")[0];

    myFT.applyClickTag(container, 1);

    function initBanner () {
      console.log(container)
      backgroundImage.src = myFT.instantAds.backgroundImage;
      title.innerHTML = myFT.instantAds.title;
      cta.innerHTML = myFT.instantAds.cta;
    }

    myFT.on("instantads", function() {
      initBanner()
    })

    /*container.on("click", function(){
   		myFT.clickTag(1);
 	  });*/
  </script>
</body>
</html>
